<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_graph"
  app:startDestination="@id/registerFragment">

  <fragment
    android:id="@+id/firstFragment"
    android:name="com.example.greetingsapp.FirstFragment"
    android:label="@string/first_fragment_label"
    tools:layout="@layout/fragment_first"/>
  <fragment
    android:id="@+id/userProfileFragment"
    android:name="com.example.greetingsapp.UserProfileFragment"
    android:label="@string/second_fragment_label"
    tools:layout="@layout/fragment_user_profile"/>
  <fragment
    android:id="@+id/registerFragment"
    android:name="com.example.greetingsapp.RegisterFragment"
    android:label="fragment_register"
    tools:layout="@layout/fragment_register" >
    <action
      android:id="@+id/action_registerFragment_to_firstFragment"
      app:destination="@id/firstFragment" />
  </fragment>
</navigation>